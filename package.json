{
  "name": "flash-translate",
  "private": true,
  "version": "1.0.4",
  "type": "module",
  "homepage": "https://chromewebstore.google.com/detail/gibfhkdnpbinchfllkhaihmghbbollfd",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && rm -rf dist && vite build",
    "lint": "bun x ultracite check",
    "format": "bun x ultracite fix",
    "format:unsafe": "bun x ultracite fix --unsafe",
    "preview": "vite preview",
    "zip": "bun run build && mkdir -p releases && cd dist && zip -r ../releases/flash-translate-v$npm_package_version.zip .",
    "test": "vitest run",
    "test:watch": "vitest run --watch",
    "prepare": "husky"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "lucide-react": "^0.562.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@crxjs/vite-plugin": "^2.3.0",
    "@tailwindcss/vite": "^4.1.18",
    "@types/chrome": "^0.1.32",
    "@types/dom-chromium-ai": "0.0.13",
    "@types/node": "^24.10.4",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "babel-plugin-react-compiler": "^1.0.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "ultracite": "6.5.0",
    "vite": "^7.2.4",
    "vite-plugin-babel": "^1.3.2",
    "vitest": "^4.0.16"
  }
}
